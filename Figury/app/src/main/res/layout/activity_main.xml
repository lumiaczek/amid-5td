<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.example.figura.Figura
                android:id="@+id/figura1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                class="com.example.figura"
                android:contentDescription="@string/koło"
                />
            <com.example.figura.Figura
                android:id="@+id/figura2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                class="com.example.figura"
                android:contentDescription="@string/elipsa"
                />
            <com.example.figura.Figura
                android:id="@+id/figura3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                class="com.example.figura"
                android:contentDescription="@string/prostokąt"
                />
            <com.example.figura.Figura
                android:id="@+id/figura4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                class="com.example.figura"
                android:contentDescription="@string/prostokąt_okrągły"
                />
            <com.example.figura.Figura
                android:id="@+id/figura5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                class="com.example.figura"
                android:contentDescription="@string/łuk"
                />
            <com.example.figura.Figura
                android:id="@+id/figura6"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                class="com.example.figura"
                android:contentDescription="@string/linia"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>